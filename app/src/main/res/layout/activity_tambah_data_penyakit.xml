<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Admin.TambahDataPenyakit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/tambahpnykembali"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bck"
                android:layout_marginEnd="10dp"
                android:background="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAMBAH DATA PENYAKIT"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID PENYAKIT"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:textColor="#D9017A"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editcard"
            android:id="@+id/tmbhidpny"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:paddingStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMA PENYAKIT"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="#D9017A"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/editcard"
            android:id="@+id/tmbhnamapny"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textSize="16dp"
            android:paddingStart="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KETERANGAN"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="#D9017A"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/editcard2"
            android:id="@+id/tmbhketepny"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:paddingStart="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOLUSI"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="#D9017A"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="@drawable/editcard2"
            android:id="@+id/tmbhsolupny"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:paddingStart="3dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GEJALA"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="#D9017A"
            android:shadowColor="@color/black"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:textStyle="bold"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/editcard2"
            android:id="@+id/tmbhciripny"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:textSize="16dp"
            android:paddingStart="3dp"/>

        <Button
            android:id="@+id/buttambahpenyakit"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cusbut"
            android:text="TAMBAH"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginBottom="20dp"
            android:textColor="#025F00"
            android:layout_gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>