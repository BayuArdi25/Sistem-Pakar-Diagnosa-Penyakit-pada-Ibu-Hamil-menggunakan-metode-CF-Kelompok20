<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bglogin"
    tools:context=".User.UbahSandi">

    <ImageButton
        android:id="@+id/butkemubahsandi"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/bck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="296dp"
        android:layout_height="283dp"
        android:layout_gravity="center"
        android:background="@drawable/editcard"
        app:cardCornerRadius="40dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Loginn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="UBAH PASSWORD"
                android:textAlignment="center"
                android:textColor="#BD2086"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pass1"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/editcard"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="10dp"
                android:hint="Password Baru"
                android:padding="3dp"
                android:textSize="21dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/pass2"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/editcard"
                android:drawableStart="@drawable/lock"
                android:drawablePadding="10dp"
                android:hint="Konfirmasi Password"
                android:padding="5dp"
                android:textSize="21dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/butubahpass"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/cusbut"
                android:text="Ubah"
                android:textAlignment="center"
                android:textColor="#BD2086"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>